<div class="title">
  <h1>{{title}}</h1>
  {{#if updated}}
    Updated {{updated}}
  {{/if}}
</div>

{{#if books}}
  {{#each books}}
    <article class="item" style="background-image: url({{this.book_image}});">
      <div class="text">
        <h2>{{this.title}}</h2>
        <h3>by <strong>{{this.author}}</strong></h3>
      </div>
    </article>

  {{/each}}
{{/if}}
