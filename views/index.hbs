<div class="title">
  <h1>{{title}}</h1>
  {{#if updated}}
    Updated {{updated}}
  {{/if}}
</div>

{{#if books}}
  {{#each books}}
    <a href="{{this.amazon_product_url}}">
      <article class="item" style="background-image: url({{this.book_image}});">
        <div class="text">
          <h2>{{this.title}}</h2>
          <h3>by <strong>{{this.author}}</strong></h3>
        </div>
      </article>
    </a>

  {{/each}}
{{/if}}

{{#if news}}
<h1>HELLO</h1>
  {{#each news}}
    <a href="{{this.url}}">
      <article class="item" style="background-color: gray"> 
        <div class="text">
          <h2>{{this.title}}</h2>
          <p>
            {{this.abstract}}
          </p>
        </div>
      </article>
    </a>
  {{/each}}
{{/if}}
